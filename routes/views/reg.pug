doctype html
html
	head
		title Sign up
		meta(name="viewport" content="width=device-width, initial-scale=1")
		style
			include ../css/common.css
			include ../css/sign.css
	body
		h1 Registration
		form#sign(method="post" action="?method=post")
			label
				span Nickname
				input(name="nickname")
				span#isFree
			label
				span Password
				input(name="password")
				span#lengthOk
			label
				span Repeat PW
				input(name="password1")
				span#doesMatch
			button(type="submit") Sign up
		script
			include ../js/sign.js